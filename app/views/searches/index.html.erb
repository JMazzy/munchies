
<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#dropdown" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Munchies", root_path ,class: "nav navbar-brand" %>
    </div>

    <div class="collapse navbar-collapse" id="dropdown">
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <%= form_tag "/searches", class: 'navbar-form', remote: true do %>
            <%= text_field_tag :address, '', class: 'form-control', placeholder: 'Search by City or Zip' %>
            <%= submit_tag "search", class: "btn-default" %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container">

  <div style='width: 400px;'>
    <div id="map" style='width: 400px; height: 200px;'></div>
  </div>

  <div class="row">
    <h2>Nearby Trucks</h2>
  </div>

  <% if @trucks %>
  <div class="row">
    <table class="table">

      <thead>
        <tr>
          <th>PDF Schedule</th>
          <th>Vendor</th>
          <th>Food</th>
          <th>Address</th>
          <th>Hours</th>
        </tr>
      </thead>

      <tbody id="truck-list">
        <% @trucks.each do |list| %>
          <tr>
            <td><%= link_to "PDF Schedule", list[:schedule] %></td>
            <td><%= list[:vendor] %></td>
            <td><%= list[:food] %></td>
            <td><%= list[:address] %></td>
            <td><%= list[:hours] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% end %>

</div>
